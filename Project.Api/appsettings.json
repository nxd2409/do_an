{
  "ConnectionStrings": {
    "DefaultConnection": "Server=103.249.158.25,1000;Database=DO_AN;User Id=sa;Password=sa@d2s.com.vn;TrustServerCertificate=True;",
    "HangfireConnection": "Server=103.249.158.25,1000;Database=DO_AN_HANGFIRE;User Id=sa;Password=sa@d2s.com.vn;TrustServerCertificate=True;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "Redis": {
    "Enabled": false,
    "ConnectionString": "localhost:6379",
    "InstanceName": "Project_Dev_"
  },

  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "console": {
        "type": "Console",
        "layout": "${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${exception:format=ToString}"
      },
      "textFile": {
        "type": "File",
        "fileName": "${basedir}/Logs/${shortdate}.log",
        "layout": "${longdate} | [${level:uppercase=true}] | ${logger} | ${machinename} | PID:${processid} | TID:${threadid} | ${message} ${exception:format=ToString} | ${all-event-properties}",
        "archiveEvery": "Day",
        "archiveNumbering": "Rolling",
        "archiveFileName": "${basedir}/Logs/archives/${shortdate}.{#}.log",
        "maxArchiveFiles": 30,
        "keepFileOpen": false,
        "createDirs": true,
        "encoding": "utf-8"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console,textFile"
      }
    ]
  },

  "JWT": {
    "Key": "DEV_ONLY_CHANGE_ME__local_jwt_key__do_not_deploy_to_server__2025-12-29",
    "Issuer": "http://localhost:5117",
    "Audience": "Project",
    "Subject": "JWTServiceAccessToken",
    "ExpireToken": 3600,
    "ExpireRefreshToken": 30
  },

  "Minio": {
    "Endpoint": "http://124.158.6.81",
    "Port": 9090,
    "AccessKey": "admin",
    "SecretKey": "admin@minio@2025@##",
    "UseSSL": false,
    "BucketName": "do-an",
    "Public": true
  }
