# Backend - appsettings.Production.json Environment Variables

# Database
DB_SERVER=localhost
DB_USER=sa
DB_PASSWORD=your-secure-password
DB_NAME=DO_AN
DB_HANGFIRE_NAME=DO_AN_HANGFIRE

# Redis
REDIS_URL=localhost:6379

# JWT
JWT_KEY=your-secret-jwt-key-min-32-characters-long-for-security

# API URLs
API_URL=https://your-api-name.onrender.com
FRONTEND_URL=https://your-frontend-name.vercel.app

# MinIO (Object Storage)
MINIO_ENDPOINT=minio.example.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000

# Frontend - Environment Variables
NG_APP_API_URL=https://your-api-name.onrender.com/api
NG_APP_SIGNALR_URL=https://your-api-name.onrender.com/hubs
